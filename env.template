# Vaultwarden Settings
# Admin token for the /admin page. 
# Generate one with: `openssl rand -base64 48`
ADMIN_TOKEN=

# Verify new users? (true/false)
SIGNUPS_ALLOWED=false

# Cloudflare Tunnel Token
# Get this from Cloudflare Zero Trust Dashboard > Access > Tunnels
TUNNEL_TOKEN=

# SMTP Configuration for Daily Reports
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_FROM=your_email@gmail.com
SMTP_PASS=your_app_password
TO_EMAIL=recipient@example.com

# Backup Encryption (Optional)
# If set, the backup zip file will be password protected
ZIP_PASSWORD=
